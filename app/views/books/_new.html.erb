<h2>New book</h2>

<%= form_for(@new_book, url: '/books') do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, :class => "book_body" %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body, :class => "book_body" %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>